<html>
  <head>
    <!-- Tracking Pixels -->
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script
      async
      src="https://www.googletagmanager.com/gtag/js?id=UA-164363580-1"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "UA-164363580-2");
    </script>

    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- SEO Meta Tags -->
    <meta
      name="description"
      content="Quality ETF fundamental data, updated daily. Providing deep data including sector, country, factor, dividend yield, valuations."
    />
    <meta name="author" content="ETF Data API" />

    <!-- OG Meta Tags to improve the way the post looks when you share the page on LinkedIn, Facebook, Google+ -->
    <meta property="og:site_name" content="ETF Data API" />
    <meta property="og:site" content="https://etf-data.com/" />
    <meta
      property="og:title"
      content="Quality ETF fundamental data, updated daily"
    />
    <!-- title shown in the actual shared post -->
    <meta property="og:description" content="Homepage" />
    <meta property="og:image" content="images/etf-data_logo.png" />
    <meta property="og:url" content="https://etf-data.com/" />
    <meta property="og:type" content="article" />

    <!-- Website Title -->
    <title>Thank you</title>

    <!-- Favicon  -->
    <link rel="icon" href="/images/etf-data_logo.png" />
  </head>

  <body>
    <!-- Styles -->
    <style>
      <%- include('../dist/scss/main.css') -%>
      <%- include('../dist/js/tippy.bundle.css') -%>
    </style>

    <div class="background">
      <div class="stripe-primary"></div>
      <div class="stripe-secondary"></div>
    </div>

    <div class="page container" id="app">
      <!-- Left Side Menu -->
      <div class="row">
        <div class="col-md-2">
          <% include _includes/section-side-menu-static %>
        </div>

        <div class="col-md-10">
          <!-- Main Page Conent -->
          <div class="content">
            <!-- Page content -->
            <div class="container-fluid card">
              <div class="col-md-6">
                <h1>
                  <i class="zuri-icon success size-l align-middle"></i>Thank you!
                </h1>

                <p>
                  Your subscripion plan will be activated shortly.
                </p>

                <p>
                  You can <b>manage your subscription</b>
                  <a
                    class="link"
                    href="https://etf-data.com/#manage-subscription"
                    >here.</a
                  >
                </p>

                <p>
                  If you have any questions or problems, please don't hesitate to contact us
                  at
                  <a class="link" href="mailto:support@zurianalytics.com"
                    >support@zurianalytics.com</a
                  >
                </p>
              </div>

              <div class="col-md-6">
                <h1>
                    <i class="zuri-icon lock size-l align-middle"></i>Your token
                </h1>

                <form id="manage-subscription-form" method="GET" class="tile">
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group" data-children-count="1">
                        <label class="label top">Save your token to a secure location:</label>
                        <textarea
                          id="api-token-manage"
                          v-model="token"
                          readonly="readonly"
                        ></textarea>
                      </div>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>

  <!-- Global Vue (Needed for everything) -->
  <script src="/js/vue.external.js"></script>

  <script src="/js/success.bundle.js"></script>
</html>
